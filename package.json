{
	"name": "@mingling/root",
	"version": "1.0.0",
	"description": "mingling Monorepo Client",
	"private": true,
	"license": "ISC",
	"scripts": {
		"postinstall": "pnpm run build:packages",
		"prepare": "run-s husky git:config intro",
		"husky": "husky",
		"git:config": "git config --local include.path ../.gitconfig",
		"intro": "intro",
		"local:mobile": "turbo local --filter=\"{./apps/mobile}...\"",
		"dev:mobile": "turbo dev --filter=\"{./apps/mobile}...\"",
		"build:mobile:dev": "turbo build:dev --filter=\"{./apps/mobile}...\"",
		"build:packages": "turbo build --filter=\"{./packages/**}...\"",
		"build:nested": "turbo build:prod",
		"clear": "find . -type d \\( -name '.turbo' -o -name 'dist' -o -name 'build' -o -name '.expo' -o -name '.next' -o -name 'Pods' -o -name 'node_modules' \\) -exec rm -rf {} +",
		"prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
		"inflint": "inflint -c ./inflint.config.cjs",
		"knip": "knip",
		"lint:all": "turbo lint",
		"type-check:all": "turbo type-check",
		"check:all": "run-s inflint knip lint:all type-check:all"
	},
	"devDependencies": {
		"@exlint.io/inflint": "2.1.1",
		"@types/node": "20.14.1",
		"@typescript-eslint/eslint-plugin": "6.18.1",
		"@typescript-eslint/parser": "6.18.1",
		"cnb": "1.2.4",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-deprecation": "1.5.0",
		"eslint-plugin-i18next": "6.0.3",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-react": "7.32.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-unicorn": "47.0.0",
		"eslint-plugin-unused-imports": "3.2.0",
		"husky": "9.1.4",
		"intro-cli": "1.0.9",
		"knip": "5.23.3",
		"lint-staged": "15.2.5",
		"npm-run-all2": "6.2.0",
		"prettier": "3.3.2",
		"prettier-plugin-sh": "0.14.0",
		"prettier-plugin-tailwindcss": "0.6.5",
		"turbo": "2.2.3",
		"typescript": "5.6.3"
	},
	"packageManager": "pnpm@9.12.2",
	"engines": {
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm",
		"pnpm": ">=9",
		"node": ">=20"
	}
}
