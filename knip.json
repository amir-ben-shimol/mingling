{
	"ignore": ["inflint.config.cjs", "cnb.config.ts", "intro.config.ts"],
	"ignoreWorkspaces": ["packages/types", "packages/database", "packages/redis", "packages/socket"],
	"ignoreDependencies": ["cnb"],
	"workspaces": {
		"apps/mobile": {
			"entry": "src/**/*",
			"ignore": ["metro.config.js", "app.config.ts", "reactotron-config.js"],
			"ignoreDependencies": [
				"metro-cache",
				"expo-dev-client",
				"expo-font",
				"@expo/config",
				"expo-build-properties",
				"dotenv",
				"expo-localization",
				"reactotron-plugin-zustand",
				"reactotron-react-native",
				"ts-mock-api",
				"@expo/metro-config",
				"@config-plugins/react-native-webrtc"
			],
			"ignoreBinaries": ["eas", "pod"]
		},
		"apps/backend": {
			"ignoreDependencies": ["ts-node"],
			"ignore": ["@types/**/*", "src/models/user.ts"]
		}
	}
}
