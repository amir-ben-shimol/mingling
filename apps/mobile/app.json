{
	"expo": {
		"name": "mogichat",
		"slug": "mingling-mobile-app",
		"orientation": "portrait",
		"icon": "./src/assets/images/global/app_logo.png",
		"scheme": "myapp",
		"userInterfaceStyle": "dark",
		"assetBundlePatterns": ["./src/assets/**/*"],
		"jsEngine": "hermes",
		"bundler": "metro",
		"packagerOpts": {
			"assetExts": ["png", "jpg", "jpeg", "gif", "webp", "svg", "otf", "ttf", "woff", "woff2"]
		},
		"runtimeVersion": {
			"policy": "appVersion"
		},
		"splash": {
			"image": "./src/assets/images/global/splash_2.png",
			"resizeMode": "contain",
			"backgroundColor": "#1f2937"
		},
		"extra": {
			"supportsRTL": false,
			"forcesRTL": false,
			"router": {
				"origin": false
			},
			"eas": {
				"projectId": "37d266a8-faad-47ae-bec2-466e30ee6c54"
			}
		},
		"ios": {
			"bundleIdentifier": "leumit.co.il.mobile-dev",
			"supportsTablet": true,
			"infoPlist": {
				"ExpoLocalization_supportsRTL": false,
				"ITSAppUsesNonExemptEncryption": false,
				"NSAppTransportSecurity": {
					"NSAllowsArbitraryLoads": true
				},
				"UIBackgroundModes": ["fetch", "remote-notification"],
				"ExpoLocalization_forcesRTL": false
			},
			"config": {
				"googleMapsApiKey": "AIzaSyBFm8NOrSpDOPPsBo_vnbg8uUmq3PNbjW0"
			}
		},
		"android": {
			"package": "il.co.leumit.mobile",
			"adaptiveIcon": {
				"foregroundImage": "./src/assets/images/global/app_logo.png",
				"backgroundColor": "#111827"
			},
			"permissions": [
				"android.permission.USE_BIOMETRIC",
				"android.permission.USE_FINGERPRINT",
				"android.permission.RECEIVE_BOOT_COMPLETED",
				"android.permission.READ_EXTERNAL_STORAGE",
				"android.permission.WRITE_EXTERNAL_STORAGE",
				"android.permission.INTERNET",
				"android.permission.ACCESS_COARSE_LOCATION",
				"android.permission.ACCESS_FINE_LOCATION",
				"android.permission.CAMERA",
				"android.permission.RECORD_AUDIO",
				"android.permission.ACCESS_NETWORK_STATE",
				"android.permission.MODIFY_AUDIO_SETTINGS",
				"android.permission.SYSTEM_ALERT_WINDOW",
				"android.permission.WAKE_LOCK",
				"android.permission.BLUETOOTH"
			],
			"useNextNotificationsApi": true
		},
		"plugins": [
			"expo-router",
			"expo-file-system",
			"expo-localization",
			[
				"expo-splash-screen",
				{
					"splashScreenDelay": false
				}
			],
			[
				"@config-plugins/react-native-webrtc",
				{
					"cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
					"microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone"
				}
			],
			[
				"expo-secure-store",
				{
					"faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
				}
			],
			[
				"expo-font",
				{
					"fonts": [
						"./src/assets/fonts/Rubik-Black.ttf",
						"./src/assets/fonts/Rubik-Bold.ttf",
						"./src/assets/fonts/Rubik-ExtraBold.ttf",
						"./src/assets/fonts/Rubik-Light.ttf",
						"./src/assets/fonts/Rubik-Medium.ttf",
						"./src/assets/fonts/Rubik-Regular.ttf",
						"./src/assets/fonts/Rubik-SemiBold.ttf"
					]
				}
			],
			[
				"expo-asset",
				{
					"assets": ["./src/assets/images/global/app_logo.png"]
				}
			],
			[
				"expo-dev-launcher",
				{
					"launchMode": "most-recent"
				}
			],
			[
				"expo-notifications",
				{
					"icon": "./src/assets/images/global/app_logo.png",
					"color": "#111827",
					"defaultChannel": {
						"name": "default",
						"importance": "max",
						"vibrationPattern": [0, 250, 250, 250],
						"sound": true
					}
				}
			],
			[
				"expo-build-properties",
				{
					"android": {
						"usesCleartextTraffic": true
					}
				}
			]
		],
		"experiments": {
			"typedRoutes": true
		},
		"owner": "amir-ben-shimol"
	}
}
